<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/white"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/card_img"

            android:layout_width="360dp"

            android:layout_height="128dp"
            android:layout_alignParentTop="true"

            android:contentDescription="@null"

            android:src="@drawable/lion" />

        <TextView
            android:id="@+id/card_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="@string/card_title"
            android:layout_below="@+id/card_location"
            android:layout_alignLeft="@+id/card_description"
            android:layout_alignStart="@+id/card_description" />

        <TextView
            android:id="@+id/card_description"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_below="@id/card_title"

            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"


            android:text="@string/card_subtitle"
             />

        <ImageView
            android:id="@+id/card_location"

            android:layout_width="16dp"
            android:layout_height="16dp"

            android:layout_below="@id/card_img"

            android:contentDescription="@null"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:src="@drawable/ic_map_marker"
             />

        <TextView
            android:id="@+id/card_icon_description"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toStartOf="@id/card_location"
            android:layout_toLeftOf="@id/card_location"

            android:layout_below="@id/card_img"

            android:text="@string/card_icon"

            />

    </RelativeLayout>

</android.support.v7.widget.CardView>